{
  "manifest_version": 3,
  "name": "Sparks Browser Extension",
  "version": "0.1.0",
  "description": "Capture and save web content as prompts for the Sparks application",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Sparks Extension"
  },
